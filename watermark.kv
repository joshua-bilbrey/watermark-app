<GridLayout>:
    cols: 1
    size_hint: [.9, .9]
    pos_hint: { 'top' : .95, 'right': .95}
    spacing: (0, 150)

    BoxLayout:
        Label:
            text: 'Watermark App'
            font_size: '30sp'

    BoxLayout:
        Label:
            text: 'Type your watermark: '
        TextInput:
            id: my_text
            multiline: False
            padding: 10

    BoxLayout:
        Label:
            text: 'Choose your image: '
        Button:
            text: 'Pick Image'
            on_press: root.choose_file(my_text.text)